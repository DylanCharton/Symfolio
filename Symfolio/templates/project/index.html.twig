{% extends 'base.html.twig' %}

{% block title %}Dylan Charton - Projets{% endblock %}

{% block body %}
<section class="projets mt-5">
    <h1 class="mb-5 text-center">Mes projets</h1>
    {% for projet in projets %}
    <div class="d-flex row">
        <div class="col-4">
            <img src="http://placehold.it/350x150" alt="Illustration" class="img-fluid">
        </div>
        <div class="col-4">
            {{ projet.description | raw }}
        </div>
        <div class="d-flex flex-column align-items-end col-4">
            <h2>{{projet.title}}</h2>
            <div class="metadata">Projet effectué entre le 06/12/2021 et le 13/12/2021</div>
            {# Le lien du projet serait plutôt dans le projet lui-même #}
            {# <a href="{{projet.weblink}}">Lien du projet</a> #}
            <div class="content">

                
                <a href="{{ path( 'project_show', {'id': projet.id} )}}" class="btn btn-primary">Voir plus</a>
            </div>
        </div>
    </div>
    <hr>
    {% endfor %}



</section>
{% endblock %}